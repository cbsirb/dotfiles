xrdb -merge ~/.Xresources

# Don't pollute path if not needed
if [[ ! "$PATH" == *"$HOME/.cargo/bin"* ]]; then
    export PATH="$PATH:$HOME/.cargo/bin"
fi

if [[ ! "$PATH" == *"$HOME/bin"* ]]; then
    export PATH="$PATH:$HOME/bin"
fi

