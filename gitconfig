[alias]
    co = checkout
    br = branch
    st = status
    fa = fetch --all

    di = diff
    dc = diff --cached
    ds = diff --stat=160,120
    dh1 = diff HEAD~1

    ci = commit --verbose
    amend = commit --amend
    uncommit = reset --soft HEAD^

    unstage = reset HEAD --

    pullff = pull --ff-only
    pullr = pull --rebase

    noff = merge --no-ff

    head = !git r -1
    h = !git head

[mergetool.meld]
    cmd = meld --auto-merge --output $MERGED $LOCAL $BASE $REMOTE --diff $BASE $LOCAL --diff $BASE $REMOTE

[merge]
    # conflictstyle = diff3
    tool = vimdiff

[core]
    # ignore executable bit
    fileMode = false
    excludesfile = ~/dotfiles/.gitignore-global

[diff]
    algorithm = histogram

[help]
    autocorrect = 1

[pull]
    rebase = true

