[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    unstage = reset HEAD --
    pullff = pull --ff-only
    pullr = pull --rebase

[mergetool.ediff]
    cmd = ~/bin/emerge.sh

[mergetool.meld]
    cmd = meld --auto-merge --output $MERGED $LOCAL $BASE $REMOTE --diff $BASE $LOCAL --diff $BASE $REMOTE

[merge]
    conflictstyle = diff3
    tool = meld

[core]
    # ignore executable bit
    fileMode = false
