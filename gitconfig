[alias]
    co = checkout
    br = branch
    st = status
    fa = fetch --all

    di = diff
    dc = diff --cached
    ds = diff --stat=160,120
    dh1 = diff HEAD~1

    ci = commit --verbose
    amend = commit --amend
    uncommit = reset --soft HEAD^

    unstage = reset HEAD --

    pullff = pull --ff-only
    pullr = pull --rebase

    noff = merge --no-ff

    head = !git r -1
    h = !git head
    hp = !git l -1

    r = !GIT_NO_PAGER=1 git l -30
    ra = !git r --all

[mergetool.meld]
    cmd = meld --auto-merge --output $MERGED $LOCAL $BASE $REMOTE --diff $BASE $LOCAL --diff $BASE $REMOTE

[merge]
    # conflictstyle = diff3
    tool = vimdiff

[difftool.kitdiff]
    cmd = kitty +kitten diff $LOCAL $REMOTE

[core]
    # ignore executable bit
    fileMode = false
    excludesfile = ~/dotfiles/.gitignore-global

[diff]
    algorithm = histogram

; [pull]
;     rebase = true

; [transfer]
;     fsckobjects = true
; [fetch]
;     fsckobjects = true
; [receive]
;     fsckObjects = true
[help]
	autocorrect = 1
[pull]
	rebase = true
