[alias]
    co = checkout
    br = branch
    st = status
    fa = fetch --all

    di = diff
    dc = diff --cached
    ds = diff --stat=160,120
    dh1 = diff HEAD~1

    ci = commit --verbose
    amend = commit --amend
    uncommit = reset --soft HEAD^

    unstage = reset HEAD --

    pullff = pull --ff-only
    pullr = pull --rebase

    noff = merge --no-ff

    # Divergence (commits we added and commits remote added)
    div = divergence

    # Goodness (summary of diff lines added/removed/total)
    gn = goodness
    gnc = goodness --cached


    head = !git r -1
    h = !git head
    hp = !git l -1

    r = !GIT_NO_PAGER=1 git l -30
    ra = !git r --all

    l = !git pretty-log
    la = !git pretty-log --all

[mergetool.meld]
    cmd = meld --auto-merge --output $MERGED $LOCAL $BASE $REMOTE --diff $BASE $LOCAL --diff $BASE $REMOTE

[merge]
    conflictstyle = diff3
    tool = vimdiff

[core]
    # ignore executable bit
    fileMode = false

[pull]
    rebase = true

[transfer]
    fsckobjects = true
[fetch]
    fsckobjects = true
[receive]
    fsckObjects = true
